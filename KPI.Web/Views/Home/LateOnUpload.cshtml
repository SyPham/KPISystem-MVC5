@using PagedList;
@using PagedList.Mvc;
@using MvcBreadCrumbs

@model IPagedList<KPI.Model.EF.LateOnUpLoad>
@{
     ViewBag.Title = "Late On Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;

}
@Html.Raw(BreadCrumb.Display())
<div class="box">
    <div class="box-header">
        <h3 class="box-title">List Tasks</h3>
    </div>

    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    No.
                </th>
                <th>
                    OC
                </th>
                <th>
                    DeadLine
                </th>
                <th>
                    KPI Name
                </th>
                <th>
                    Code
                </th>
                <th>
                    Year
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="@(count%2==0 ? "bg-info" : "")">
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeadLine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KPIName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                </tr>
                count++;
            }

        </table>
    </div>
    <div class="box-footer">
        @Html.PagedListPager(Model, numberpage => Url.Action("LateOnUpload", new { notificationId = ViewBag.NotificationId, page = numberpage }), new PagedListRenderOptions { LinkToFirstPageFormat = "First", LinkToPreviousPageFormat = "Previous", LinkToNextPageFormat = "Next", LinkToLastPageFormat = "Last", MaximumPageNumbersToDisplay = 5 })
    </div>

</div>






