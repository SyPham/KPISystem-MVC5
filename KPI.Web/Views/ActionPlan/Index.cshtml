@model List<KPI.Model.ViewModel.ListActionPlanVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>

                <div class="box-tools">
                    <div class="form-group">
                        <select class="form-control " id="search">
                            <option value="value">Choose category</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Tag</th>
                            <th>Content</th>
                            <th>Description</th>
                            <th>Deadline</th>
                            <th>SubmitDate</th>
                            <th>Auditor</th>
                            <th>Category</th>
                            <th>UpdateSheduleDate</th>
                            <th>ActualFinishDate</th>

                        </tr>
                    </thead>
                    <tbody id="tbody">
                        
                    </tbody>
                    </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

@section scripts{
    
    <script>

        var actionPlanController = {

            init() {
                actionPlanController.loadData();
                actionPlanController.getAllCategory();
            },
            registerEvent() {
                $('#search').off('change').on('change', function () {
                    
                    actionPlanController.loadData(this.val());
                })
            },
            loadData(id) {
                 $.get('/ActionPlan/LoadData', { catid: id }, function (res) {
                        console.log(res);
                     var data = res;
                     var html = "";
                         $.each(data, function (i, item) {
                             html += `<tr>
                                    <td>${item.ID}</td>
                                    <td>
                                      
                                        ${item.Title}
                                        
                                    </td>
                                    <td>
                                       ${item.Tag}
                                    </td>
                                    <td>
                                     
                                    <p><i class="fa fa-check text-green"></i> ${item.Description}</p>
                                    </td>
                                    <td>${item.Description}</td>
                                    <td>${item.Deadline}</td>
                                    <td>${item.SubmitDate}</td>
                                    <td>${item.Auditor}</td>
                                    <td>${item.Category}</td>
                                    <td>${item.UpdateSheduleDate}</td>
                                    <td>${item.ActualFinishDate}</td>
                                </tr>`;
                         });

                     $('#tbody').append(html);
                    });
            },
            getAllCategory() {
                 $.get('/ActionPlan/GetAllCategory', function (res) {
                        console.log(res);
                     var data = res;
                     var html = '';
                     $.each(data, function (i, item) {
                         html += ` <option value="${item.ID}">${item.Name}</option>`;
                     })
                     $('#search').append(html);
                    });
            }
        }
        actionPlanController.init();
    </script>
    }